<% if(typeof me != 'undefined') { %>
  <script>
    (function() {
        const titleEl = document.getElementById("title");
        const sendBtn = document.getElementById("button-send");
  
        function getCookie(name) {
            let matches = document.cookie.match(new RegExp(
            "(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"
            ));
            return matches ? decodeURIComponent(matches[1]) : undefined;
        }
  
        sendBtn.onclick = function() {
        if (getCookie("in-system") == "true") {
          if (titleEl.value != '' || titleEl.value.lenght < 128) {
            sendBtn.disabled = true;
            let text = JSON.stringify({name: titleEl.value});
            let request = new XMLHttpRequest();
            request.open("POST", "/group/chat/add", true);  
            request.setRequestHeader("Content-Type", "application/json");
            request.addEventListener("load", function () {
              let ans = JSON.parse(request.response);
                        //if (typeof(ans.id) == INT)
              if (request.response) {
                window.location.replace("/chat?cid=" + ans.id);
              }
              //console.log(ans);
            });
            request.send(text);
          }

        }
    }
  })();
  </script>
  <% } %>  

