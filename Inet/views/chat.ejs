<script>
  (function() {
    // const sendBtn = document.querySelector('#send');
    // const messages = document.querySelector('#messages');
    // const messageBox = document.querySelector('#messageBox');
    const messages = document.getElementById("messages");
    const sendBtn = document.getElementById("button-addon2");
    sendBtn.classList.add("disabled");
    const messageBox = document.getElementById("to-send");
    messages.scrollTop = messages.scrollHeight;

    let ws;
    function setElement(element, classType, text) {
      child = element.querySelector(classType);
      child.classList.remove(classType);
      child.innerText = text;
      child.style.display = 'block';
    }

    function showMessage(m, user, name) {
      var message
      if (user == <%= me %>) {
        message = document.getElementById("my-message").cloneNode(true);
        child = message.querySelector('.for-date');
        child.classList.add("d-flex");
        child.classList.add("justify-content-end");
      } else {
        message = document.getElementById("other-message").cloneNode(true);
        setElement(message, '.for-user', name);
        // us = message.querySelector('.for-user');
        // us.innerText = user;
      }
      setElement(message, '.for-message', m);
      setElement(message, '.for-date', new Intl.DateTimeFormat('en-GB', { year: '2-digit', month: '2-digit', day: '2-digit', hour:'2-digit', minute:'2-digit', second:'2-digit' }).format(new Date()));
      message.style.display = 'block';
      messages.appendChild(message);
      messages.scrollTop = messages.scrollHeight;
    }

    function init() {
      if (ws) {
        ws.onerror = ws.onopen = ws.onclose = null;
        ws.close();
      }
      const socketProtocol = (window.location.protocol === 'https:' ? 'wss:' : 'ws:')
      const echoSocketUrl = socketProtocol + '//' + window.location.hostname + ':88/chat/online?chat=<%= chat.id %>' // TODO: PORT 
      ws = new WebSocket(echoSocketUrl) ;
      ws.onopen = () => {
        sendBtn.classList.remove("disabled");
        //console.log('Connection opened!');
      }
      ws.onmessage = function (message) {
        let body = JSON.parse(message.data);
        showMessage(body.text, body.from, body.name);
      }

      ws.onclose = function() {
        sendBtn.classList.add("disabled");
        ws = null;
      }
    }

    messageBox.addEventListener("keyup", function(event) {
        event.preventDefault();
        if (event.keyCode === 13) {
          sendBtn.click();
        }
    });

    sendBtn.onclick = function() {
      if (!ws) {
        showMessage("No WebSocket connection :(", 'server' , 'server');
        return ;
      }
      var mes = messageBox.value.trim();
      if (mes != '') {
        let autorization = JSON.stringify({chat: <%= chat.id %>, text: mes});
      
        ws.send(autorization);
        messageBox.value = "";
      }
    }

    init();
  })();
</script>

